---
interface Props {
    NUMERO: string;
    DESCRIPCION: string;
    STOCK: string;
    NOMBRE_MARCA: string;
    PRECIO_VENTA: string;
    NOMBRE_IMAGEN: string;

}

const { NUMERO, DESCRIPCION, STOCK, NOMBRE_MARCA, PRECIO_VENTA, NOMBRE_IMAGEN} = Astro.props;
---

<style>
  .accordion {
    border: 4px solid #ccc;
    border-radius: 6px;
    margin: 0.5rem 0;
  }

  .accordion-button {
    background-color: #f9f9f9;
    padding: 1rem;
    text-align: left;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    font-weight: bold;
  }

  .accordion-content {
    background-color: #e6e6e6;
    max-height: 0;
    overflow: hidden;
    /*transition: max-height 0.45s ease-in-out;*/
    padding: 0 1rem;
  }

  input[type="checkbox"] {
    display: none;
  }

  input:checked ~ .accordion-content {
    max-height: 300px;
    padding: 1rem;
  }
</style>

<div class="accordion">
  <label>
    <input type="checkbox" />
    <div class="accordion-button">{NUMERO} - {DESCRIPCION}</div>
    <div class="accordion-content">
      <p><strong>Marca:</strong> {NOMBRE_MARCA}</p>
      <p><strong>Precio:</strong> ${PRECIO_VENTA}</p>
      <p><strong>Stock:</strong> {STOCK}</p>
      <p><strong>Imagen:</strong> {NOMBRE_IMAGEN}</p>
      <!-- <img src={`/images/${NOMBRE_IMAGEN}`} alt={DESCRIPCION} style="max-width: 100%; height: auto;" /> -->
    </div>
  </label>
</div>